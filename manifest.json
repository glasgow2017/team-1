{

  "manifest_version": 2,

  "name": "Rusty's Usability",
  "description": "Replaces all images with appropriate text.",
  "version": "1.0",

  "browser_action": {
    "default_title": "Rusty's Usability",
    "default_icon": "ImageDescriber.png", //Icon made by Surb from www.flaticon.com
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://www.pinterest.com/*"],
      "js": ["pinSumm.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://www.instagram.com/*"],
      "js": ["instaSumm.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "storage",
    "tts",
    "http://*/*"
  ]
}